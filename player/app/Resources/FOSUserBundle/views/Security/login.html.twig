{% extends 'base.html.twig' %}

{% block title %}Login | {{ project_name }}{% endblock %}

{% block div_container %}
    {% trans_default_domain 'FOSUserBundle' %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="container">
        <div class="row"><br/><br/><br/></div>

        <div class="row">
            <div class="col-8">
                <div class="card-body">
                    <h4 class="card-title">Sign in</h4>

                    <div class="card-text">
                        <form class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
                            {% if csrf_token %}
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                            {% endif %}

                            <hr>

                            <div class="form-group row">
                                <label for="username" class="col-sm-4 col-form-label">{{ 'security.login.username'|trans }}</label>
                                <div class="col-sm-8">
                                    <input type="email" class="form-control"  id="username" name="_username" value="{{ last_username }}" required="required"  placeholder="johndoe@example.com"/>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="password" class="col-sm-4 col-form-label">{{ 'security.login.password'|trans }}</label>
                                <div class="col-sm-8">
                                    <input type="password" id="password" name="_password" class="form-control" required="required" />
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-4">{{ 'security.login.remember_me'|trans }}</div>
                                <div class="col-sm-8">
                                    <div class="form-check">
                                        <label class="form-check-label">
                                            <input class="form-check-input" type="checkbox" id="remember_me" name="_remember_me" value="on">
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div>
                                <input type="submit" class="btn btn-dark" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="card col-3 ml-auto">
                <img class="card-img-top" src="/img/login-icon-3048.png" alt="Card image cap">
                <div class="card-body">
                    <h4 class="card-title">Not signed up yet?</h4>
                    <p class="card-text">Sign up to stream your favorite songs for free.</p>
                    <a href="{{ path('fos_user_registration_register') }}" class="btn btn-outline-secondary btn-block">Register</a>
                </div>
            </div>

        </div>
    </div> <!-- /container -->

{% endblock %}
