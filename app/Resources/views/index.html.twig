{% extends 'base.html.twig' %}

{% block title %}player | Home{% endblock %}

{% block div_container %}
    <header>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <div class="carousel-item active" style="background-image: url('/img/coffee-2695467_1920.jpg')">
                    <div class="carousel-caption d-none d-md-block">
                        <h3>Listen to Your Music</h3>
                        <p>Listen all your songs, right now.</p>
                    </div>
                </div>
                <div class="carousel-item" style="background-image: url('/img/cat-2592570_1920.jpg')">
                    <div class="carousel-caption d-none d-md-block">
                        <h3>Listen to Your Podcast</h3>
                        <p>Upload and stream your podcasts, everywhere.</p>
                    </div>
                </div>
                <div class="carousel-item" style="background-image: url('/img/mushroom-2651137_1920.jpg')">
                    <div class="carousel-caption d-none d-md-block">
                        <h3>Perfect Concentration</h3>
                        <p>Concentrate better with white noises.</p>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </header>

