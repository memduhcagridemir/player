{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block div_container %}
    <br/>
    <br/>
    <br/>
    <div class="container">
        <h1>Register</h1>
        {% block fos_user_content %}
            {% trans_default_domain 'FOSUserBundle' %}

            {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}

            <div class="form-group row">
                {% if form.email.vars.errors|length %}
                    <div class="alert alert-danger col-sm-12" role="alert">
                        {{ form_errors(form.email) }}
                    </div>
                {% endif %}
                <label class="col-sm-2 col-form-label">{{ form_label(form.email) }}</label>
                <div class="col-sm-10">
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'} }) }}
                </div>
            </div>

            <div class="form-group row">
                {% if form.username.vars.errors|length %}
                    <div class="alert alert-danger col-sm-12" role="alert">
                        {{ form_errors(form.username) }}
                    </div>
                {% endif %}
                <label class="col-sm-2 col-form-label">{{ form_label(form.username) }}</label>
                <div class="col-sm-10">
                    {{ form_widget(form.username, {'attr': {'class': 'form-control'} }) }}
                </div>
            </div>

            <div class="form-group row">
                {% if form.plainPassword.first.vars.errors|length %}
                    <div class="alert alert-danger col-sm-12" role="alert">
                        {{ form_errors(form.plainPassword.first) }}
                    </div>
                {% endif %}
                <label class="col-sm-2 col-form-label">{{ form_label(form.plainPassword.first) }}</label>
                <div class="col-sm-10">
                    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'} }) }}
                </div>
            </div>

            <div class="form-group row">
                {% if form.plainPassword.second.vars.errors|length %}
                    <div class="alert alert-danger col-sm-12" role="alert">
                        {{ form_errors(form.plainPassword.second) }}
                    </div>
                {% endif %}
                <label class="col-sm-2 col-form-label">{{ form_label(form.plainPassword.second) }}</label>
                <div class="col-sm-10">
                    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'} }) }}
                </div>
            </div>

            <div>
                <input type="submit" class="btn btn-primary" value="{{ 'registration.submit'|trans }}" />
            </div>
            {{ form_end(form) }}
        {% endblock fos_user_content %}
    </div>
{% endblock %}